<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
    <span class="label label-info"><%= message.name %></span>
    <%= message.body %>
    <br>
  <% end %>
  </div>
</div>

<%= form_for(Message.new, html: {class: "form-horizontal" }) do |f| %>
  <div class="form-group">
    <label class="col-sm-2 control-label">名前：</label>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control", :placeholder => "name" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">内容：</label>
    <div class="col-sm-10">
      <%= f.text_area :body, :class => "form-control", :placeholder => "content" %>
    </div>
  </div>
  <%= f.submit class: "btn btn-sm btn-primary pull-right" %>
<% end %>

